            <a href="/filter?sort=price">price (low-high)</a>
        </p>
        <hr>
        <div class="grd">
            <% burgerlist.forEach((burger)=> { %>
                <div class="grd-row brdr--light-gray p1 my1">
                    <div class="grd-row-col-1-6">
                        <%= burger.p_type %>
                    </div>
                    <div class="grd-row-col-4-6">
                        <%= burger.b_name %>
                    </div>
                    <div class="grd-row-col-1-6">
                        Â£<%= burger.price %>
                    </div>
                </div>
                <% }); %>
        </div>

    </div>
</body>

</html>